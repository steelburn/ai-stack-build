QDRANT_API_KEY=difyai123456

# === OLLAMA SETTINGS ===
OLLAMA_HOST=http://ollama:11434
OLLAMA_WEBUI_SECRET_KEY=your-ollama-webui-secret-key

# === LITELLM SETTINGS ===
LITELLM_MASTER_KEY=sk-1234
LITELLM_SALT_KEY=salt-key-1234
DATABASE_URL=postgresql://postgres:difyai123456@db:5432/dify
UI_USERNAME=admin
UI_PASSWORD=your-secure-password

# === OPENMEMORY SETTINGS ===
OPENMEMORY_VECTOR_STORE=qdrant
OPENMEMORY_QDRANT_URL=http://qdrant:6333
OPENMEMORY_QDRANT_API_KEY=difyai123456
OPENMEMORY_DATABASE_URL=postgresql://postgres:difyai123456@db:5432/dify
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# === N8N SETTINGS ===
N8N_ENCRYPTION_KEY=my-encryption-key
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=password
N8N_ENFORCE_SETTINGS_FILE_PERMISSIONS=true

# === FLOWISE SETTINGS ===
FLOWISE_USERNAME=admin
FLOWISE_PASSWORD=password
FLOWISE_SECRETKEY=your-secret-key

# === SUPABASE SETTINGS ===
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_URL=http://supabase:8000

# === OPENWEBUI SETTINGS ===
OPENWEBUI_SECRET_KEY=your-secret-key
WEBUI_AUTH=true
WEBUI_AUTH_USERNAME=your-username
WEBUI_AUTH_PASSWORD=your-secure-password

# === DIFY SETTINGS ===
# Dify uses many env vars, see .env.example in dify repo
# When using nginx reverse proxy, these should point to the public domain
CONSOLE_API_URL=${PUBLIC_DOMAIN}/dify
CONSOLE_WEB_URL=${PUBLIC_DOMAIN}/dify
SERVICE_API_URL=http://dify-api:5001
APP_API_URL=${PUBLIC_DOMAIN}/dify
APP_WEB_URL=${PUBLIC_DOMAIN}/dify
FILES_URL=${PUBLIC_DOMAIN}/dify
INTERNAL_FILES_URL=http://dify-api:5001
LOG_LEVEL=INFO
VECTOR_STORE=qdrant
QDRANT_URL=http://qdrant:6333
QDRANT_API_KEY=difyai123456
# Storage configuration for Dify
STORAGE_TYPE=local
STORAGE_LOCAL_PATH=/app/api/storage

# === MONITORING SETTINGS ===
MONITORING_USERNAME=your-monitoring-username
MONITORING_PASSWORD=your-secure-monitoring-password

# === PORT CONFIGURATIONS ===
# Ports for services exposed to public
MONITORING_PORT=5000
OLLAMA_WEBUI_PORT=8081
LITELLM_PORT=4000
N8N_PORT=5678
FLOWISE_PORT=3000
SUPABASE_PORT=54322
OPENWEBUI_PORT=8082
DIFY_WEB_PORT=3001
DIFY_API_PORT=5001
ADMINER_PORT=8083
NGINX_HTTP_PORT=8080
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672

# === DATABASE ADMIN SETTINGS ===
ENABLE_DATABASE_ADMIN=false
ADMINER_USERNAME=admin
ADMINER_PASSWORD=secure-admin-password