# === DATABASE SETTINGS ===
POSTGRES_USER=postgres
POSTGRES_PASSWORD=difyai123456
POSTGRES_DB=dify
DB_HOST=db
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=difyai123456
DB_DATABASE=dify

# === REDIS SETTINGS ===
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=difyai123456

# === VECTOR DATABASE (QDRANT) ===
QDRANT_URL=http://qdrant:6333
